{
  "name": "cloudflare-admin-boilerplate",
  "version": "1.0.0",
  "description": "Cloudflare Admin Boilerplate - Vite for Frontend, Hono for Backend",
  "private": true,
  "workspaces": [
    "frontend",
    "backend"
  ],
  "scripts": {
    "dev": "npm run dev:frontend & npm run dev:backend",
    "dev:backend": "npm run dev --workspace=backend",
    "dev:frontend": "npm run dev --workspace=frontend",
    "build": "npm run build:frontend && npm run build:backend",
    "build:frontend": "npm run build --workspace=frontend",
    "build:backend": "npm run build --workspace=backend",
    "lint": "npm run lint:frontend && npm run lint:backend",
    "lint:frontend": "npm run lint --workspace=frontend",
    "lint:backend": "npm run lint --workspace=backend",
    "test": "echo \"Error: no test specified\" && exit 1",
    "prepare": "husky install",
    "reset:packages": "rm -rf node_modules && rm -rf frontend/node_modules && rm -rf backend/node_modules && npm install"
  },
  "keywords": [
    "vite",
    "react",
    "tailwind",
    "typescript",
    "hono",
    "cloudflare"
  ],
  "author": "Alchie Tagudin",
  "license": "ISC",
  "dependencies": {
    "@hono/node-server": "^1.19.1",
    "@tailwindcss/vite": "^4.1.12",
    "dotenv": "^17.2.2",
    "hono": "^4.9.6",
    "lucide-react": "^0.542.0"
  },
  "devDependencies": {
    "@cloudflare/workers-types": "^4.20240925.0",
    "@eslint/js": "^9.33.0",
    "@types/node": "^24.3.0",
    "@types/react": "^19.1.10",
    "@types/react-dom": "^19.1.7",
    "@typescript-eslint/eslint-plugin": "^8.42.0",
    "@typescript-eslint/parser": "^8.42.0",
    "@vitejs/plugin-react": "^5.0.0",
    "@vitest/ui": "^3.2.4",
    "autoprefixer": "^10.4.21",
    "c8": "^10.1.3",
    "eslint": "^9.34.0",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-react-hooks": "^5.2.0",
    "eslint-plugin-react-refresh": "^0.4.20",
    "globals": "^16.3.0",
    "husky": "^8.0.0",
    "lint-staged": "^16.1.6",
    "postcss": "^8.5.6",
    "prettier": "^3.6.2",
    "tailwindcss": "^4.1.12",
    "tsx": "^4.20.5",
    "typescript": "^5.6.2",
    "typescript-eslint": "^8.39.1",
    "vite": "^7.1.2",
    "vitest": "^3.2.4",
    "wrangler": "^4.33.2"
  }
}
